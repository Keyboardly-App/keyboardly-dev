<resources>
    <!-- Base application theme. -->
    <style name="Theme.KeyboardlyDev" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_default</item>
        <item name="colorPrimaryVariant">@color/green_default_press</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="materialButtonStyle">@style/Widget.Keys.Button.Inverse</item>
        <!-- Customize your theme here. -->
    </style>
</resources>