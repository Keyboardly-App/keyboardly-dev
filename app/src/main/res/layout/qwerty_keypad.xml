<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:descendantFocusability="blocksDescendants"
    tools:ignore="TouchTargetSizeCheck,HardcodedText"
    android:background="@android:color/transparent">


    <!-- view for recycler view -->
    <RelativeLayout
        android:id="@+id/relativeLayoutRvTop"
        android:layout_width="match_parent"
        tools:visibility="visible"
        android:visibility="gone"
        android:gravity="bottom"
        app:layout_constraintBottom_toTopOf="@id/line_head"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewScrollTop"
            tools:itemCount="5"
            android:animationCache="false"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_alignParentBottom="true"
            tools:listitem="@layout/item_add_on_list"
            app:layout_constraintHeight_default="wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:id="@+id/header_shadow"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="@dimen/height_header" />

    <View
        android:id="@+id/line_head"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/green_default" />

    <LinearLayout
        android:id="@+id/mainHeaderParent"
        app:layout_constraintTop_toBottomOf="@id/line_head"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_navigation">

        <ImageView
            android:id="@+id/logoButton"
            android:background="@android:color/transparent"
            android:padding="5dp"
            tools:visibility="visible"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="@dimen/default_height_navigation"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_parent"
        app:layout_constraintTop_toBottomOf="@id/mainHeaderParent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_navigation">

        <ImageView
            android:id="@+id/backButton"
            android:background="@android:color/transparent"
            android:visibility="visible"
            android:padding="10dp"
            tools:visibility="visible"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_main_back"
            android:layout_width="@dimen/default_height_navigation"
            android:layout_height="match_parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/navigation"
            android:orientation="horizontal"
            tools:itemCount="6"
            tools:listitem="@layout/item_navigation_menu"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height_navigation"/>
    </LinearLayout>

    <include
        android:id="@+id/default_input_layout"
        tools:visibility="visible"
        android:visibility="gone"
        layout="@layout/form_edit_main" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keyboard_parent"
        app:layout_constraintTop_toBottomOf="@id/navigation_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <app.keyboardly.dev.keyboard.layouts.KeyboardWrapperLayout
            android:id="@+id/keyboard_wrapper_layout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout
                android:id="@+id/keyboard_qwerty_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_q"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Q" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_w"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="W" />


                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_e"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_r"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_t"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_y"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Y" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_u"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="U" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_i"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="I" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_o"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="P" />


            </app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout>

            <app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout
                android:id="@+id/keyboard_qwerty_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A" />


                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_d"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_f"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_g"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="G" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_h"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="H" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_j"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="J" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_k"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="K" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_l"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="L" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />

            </app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout>

            <app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout
                android:id="@+id/keyboard_qwerty_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_z"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Z" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_x"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="X" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_v"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="V"
                    tools:ignore="TouchTargetSizeCheck" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_b"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B" />


                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_n"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="N" />

                <app.keyboardly.dev.keyboard.keys.SquareKeyView
                    android:id="@+id/key_m"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M" />

                <app.keyboardly.dev.keyboard.keys.RectangularKeyView
                    android:id="@+id/key_backspace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="⌫"
                    app:is_special_key="true"
                    app:screen_width_percent="0.3"
                    app:special_key_code="backspace" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout>

            <app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout
                android:id="@+id/keyboard_qwerty_four"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <app.keyboardly.dev.keyboard.keys.RectangularKeyView
                    android:id="@+id/key_space"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="SPACE"
                    app:is_special_key="true"
                    app:screen_width_percent="0.60"
                    app:special_key_code="space" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout>
        </app.keyboardly.dev.keyboard.layouts.KeyboardWrapperLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- keyboard action wrapper -->
    <LinearLayout
        android:id="@+id/keyboard_action_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:visibility="visible" >
        <include
            layout="@layout/keyboard_action_view"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>