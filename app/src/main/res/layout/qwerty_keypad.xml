<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="TouchTargetSizeCheck,HardcodedText"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/line_head"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/green_default" />

    <LinearLayout
        android:id="@+id/mainHeaderParent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_navigation">

        <ImageView
            android:id="@+id/logoButton"
            android:background="@android:color/transparent"
            android:padding="5dp"
            tools:visibility="visible"
            android:clickable="true"
            android:focusable="true"
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="@dimen/default_height_navigation"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_navigation">

        <ImageView
            android:id="@+id/backButton"
            android:background="@android:color/transparent"
            android:visibility="visible"
            android:padding="10dp"
            tools:visibility="visible"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_main_back"
            android:layout_width="@dimen/default_height_navigation"
            android:layout_height="match_parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/navigation"
            android:orientation="horizontal"
            tools:itemCount="6"
            tools:listitem="@layout/item_navigation_menu"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_height_navigation"/>


        <include
            android:id="@+id/default_input_layout"
            layout="@layout/form_edit_main" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/keyboard_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <app.keyboardly.dev.keyboard.layouts.KeyboardWrapperLayout
        android:id="@+id/keyboard_wrapper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <app.keyboardly.dev.keyboard.keys.RectangularKeyView
                android:id="@+id/key_add_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                app:iconPadding="5dp"
                app:iconGravity="textStart"
                app:icon="@drawable/ic_round_local_activity_24"
                app:is_special_key="true"
                app:screen_width_percent="0.1"
                app:special_key_code="add_on" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7" />
        </app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout>

        <app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_qwerty_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_q"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Q" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_w"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="W" />


            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_r"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_t"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_u"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="U" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_i"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_o"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="O" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P" />


        </app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout>

        <app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_qwerty_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A" />


            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_s"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="D" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_g"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="G" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="H" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_j"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_k"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="K" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="L" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

        </app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout>

        <app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_qwerty_three"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_z"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_v"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="V"
                tools:ignore="TouchTargetSizeCheck" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B" />


            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_n"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N" />

            <app.keyboardly.dev.keyboard.keys.SquareKeyView
                android:id="@+id/key_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M" />

            <app.keyboardly.dev.keyboard.keys.RectangularKeyView
                android:id="@+id/key_backspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="⌫"
                app:is_special_key="true"
                app:screen_width_percent="0.3"
                app:special_key_code="backspace" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout>

        <app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_qwerty_four"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <app.keyboardly.dev.keyboard.keys.RectangularKeyView
                android:id="@+id/key_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="SPACE"
                app:is_special_key="true"
                app:screen_width_percent="0.60"
                app:special_key_code="space" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </app.keyboardly.dev.keyboard.layouts.KeyBoardRowLayout>
    </app.keyboardly.dev.keyboard.layouts.KeyboardWrapperLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/keyboard_action_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layoutDirection="ltr" >
            <include
                layout="@layout/keyboard_action_view"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>