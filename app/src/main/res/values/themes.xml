<resources>
    <!-- Base application theme. -->
    <style name="Theme.KeyboardlyDev" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_default</item>
        <item name="colorPrimaryVariant">@color/green_default_press</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/green_default</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_default</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="textActionKeyboardStyle">@style/TextActionKeyboard</item>
        <item name="materialButtonStyle">@style/Widget.Keys.Button.OutlinedButton</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextActionKeyboard" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
</resources>