<resources>
    <!-- Base application theme. -->
    <style name="Theme.KeyboardlyDev" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_default</item>
        <item name="colorPrimaryVariant">@color/green_default_press</item>
        <item name="colorOnPrimary">@color/grey_500</item>
        <item name="colorAccent">@color/green_default</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_default</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/grey_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="materialButtonStyle">@style/Button</item>
        <item name="actionKeyboardStyle">@style/ActionKeyboardStyle</item>
        <item name="textActionKeyboardStyle">@style/TextActionKeyboard</item>
        <item name="footerActionKeyboardStyle">@style/FooterActionKeyboardStyle</item>
        <item name="darkMode">false</item>
        <item name="borderMode">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.KeyboardlyDev.Border" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_default</item>
        <item name="colorPrimaryVariant">@color/green_default_press</item>
        <item name="colorOnPrimary">@color/grey_500</item>
        <item name="colorAccent">@color/green_default</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_default</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/grey_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="materialButtonStyle">@style/Button.Border</item>
        <item name="actionKeyboardStyle">@style/ActionKeyboardStyle</item>
        <item name="textActionKeyboardStyle">@style/TextActionKeyboard</item>
        <item name="footerActionKeyboardStyle">@style/FooterActionKeyboardStyle</item>
        <item name="darkMode">false</item>
        <item name="borderMode">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Button.Border" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/key_background_dark</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="contentPaddingStart">0dp</item>
        <item name="contentPaddingEnd">0dp</item>
        <item name="colorOutline">@color/key_background_dark</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/key_background_dark</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">0dp</item>
        <item name="contentPaddingStart">0dp</item>
        <item name="contentPaddingEnd">0dp</item>
        <item name="colorOutline">@color/key_background_dark</item>
    </style>


    <style name="Theme.KeyboardlyDev.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_default</item>
        <item name="colorPrimaryVariant">@color/green_default_press</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:popupTheme">@style/Theme.AppCompat.DayNight.DarkActionBar</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/green_default</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="materialButtonStyle">@style/ButtonDark</item>

        <item name="actionKeyboardStyle">@style/ActionKeyboardStyle.Dark</item>
        <item name="textActionKeyboardStyle">@style/TextActionKeyboardStyle.Dark</item>
        <item name="footerActionKeyboardStyle">@style/FooterActionKeyboardStyle.Dark</item>
        <item name="darkMode">true</item>
        <item name="borderMode">false</item>
    </style>

    <style name="Theme.KeyboardlyDev.Dark.Border" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_default</item>
        <item name="colorPrimaryVariant">@color/green_default_press</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/green_default</item>
        <item name="android:popupTheme">@style/Theme.AppCompat.DayNight.DarkActionBar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="materialButtonStyle">@style/ButtonDark.Border</item>

        <item name="actionKeyboardStyle">@style/ActionKeyboardStyle.Dark</item>
        <item name="textActionKeyboardStyle">@style/TextActionKeyboardStyle.Dark</item>
        <item name="footerActionKeyboardStyle">@style/FooterActionKeyboardStyle.Dark</item>
        <item name="darkMode">true</item>
        <item name="borderMode">true</item>
    </style>

    <style name="TextActionKeyboard" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Theme.KeyboardlyDev.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KeyboardlyDev.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KeyboardlyDev.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ButtonDark" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="colorOutline">@android:color/white</item>
        <item name="android:padding">0dp</item>
        <item name="contentPaddingStart">0dp</item>
        <item name="contentPaddingEnd">0dp</item>
    </style>

    <style name="ButtonDark.Border" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="colorOutline">@android:color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="contentPaddingStart">0dp</item>
        <item name="contentPaddingEnd">0dp</item>
    </style>
</resources>