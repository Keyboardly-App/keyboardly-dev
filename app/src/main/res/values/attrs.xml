<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KeyPadView">
        <!-- Reference to a style for the Keypad View -->
        <attr name="screen_width_percent" format="float" />
        <attr name="width_height_ratio" format="float" />
        <attr name="is_special_key" format="boolean" />

        <attr name="special_key_code" format="enum">
            <enum name="backspace" value="1" />
            <enum name="space" value="2" />
            <enum name="done" value="3" />
            <enum name="mode_change" value="4" />
            <enum name="shift" value="5" />
            <enum name="symbol" value="6" />
            <enum name="alphabet" value="7" />
            <enum name="enter" value="8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ExpandableLayout">
        <attr name="el_duration" format="integer" />
        <attr name="el_expanded" format="boolean" />
        <attr name="el_parallax" format="float" />
        <attr name="android:orientation" />
    </declare-styleable>
</resources>