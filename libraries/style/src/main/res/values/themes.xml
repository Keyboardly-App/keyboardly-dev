    <style name="DefaultButtonShadowAppearance"  parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="background">@color/default_button_color</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/grey_light</item>
