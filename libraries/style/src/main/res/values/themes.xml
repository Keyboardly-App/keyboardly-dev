<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="KeyboardlyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/brand_color</item>
        <item name="colorAccent">@color/brand_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_100</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="brandColor" >@color/brand_color</item>

        <item name="actionKeyboardStyle">@style/ActionKeyboardStyle</item>
        <item name="textActionKeyboardStyle">@style/TextActionKeyboardStyle</item>
        <item name="mainEditTextActionKeyboardStyle">@style/MainEditTextStyle</item>
        <item name="chipActionKeyboardStyle">@style/ChipKeyboardStyle</item>
        <item name="footerActionKeyboardStyle">@style/FooterActionKeyboardStyle</item>
        <item name="whiteButtonActionKeyboardStyle">@style/WhiteButtonStyle</item>
        <item name="datePickerKeyboardStyle">@style/AppDatePickerStyle</item>
        <item name="previewEditTextActionKeyboardStyle">@style/EditTextPreviewStyle</item>

    </style>

    <style name="KeyboardlyTheme.Setting" parent="@android:style/Theme.Material.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/brand_color</item>
        <item name="colorAccent">@color/brand_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey_100</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="KeyboardlyTheme.Setting.Dark" parent="@android:style/Theme.Material">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/brand_color</item>
        <item name="colorAccent">@color/brand_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#151515</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="KeyboardlyTheme.Dark"  parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_color</item>
        <item name="colorPrimaryVariant">@color/brand_color</item>
        <item name="colorAccent">@color/brand_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#151515</item>
        <item name="brandColor" >@color/brand_color</item>
        <!-- Customize your theme here. -->

        <item name="actionKeyboardStyle">@style/ActionKeyboardStyle.Dark</item>
        <item name="textActionKeyboardStyle">@style/TextActionKeyboardStyle.Dark</item>
        <item name="mainEditTextActionKeyboardStyle">@style/MainEditTextStyle.Dark</item>
        <item name="chipActionKeyboardStyle">@style/ChipKeyboardStyle.Dark</item>
        <item name="footerActionKeyboardStyle">@style/FooterActionKeyboardStyle.Dark</item>
        <item name="whiteButtonActionKeyboardStyle">@style/WhiteButtonStyle.Dark</item>
        <item name="datePickerKeyboardStyle">@style/AppDatePickerStyle.Dark</item>
        <item name="previewEditTextActionKeyboardStyle">@style/EditTextPreviewStyle.Dark</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:textColorSecondary">#333333</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:letterSpacing">-1</item>

    </style>
    <style name="spinnerStyle"  parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:padding">15sp</item>
    </style>

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
<!--        <item name="android:padding">3dp</item>-->
    </style>

    <style name="MainEditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textColorHint">?brandColor</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">?brandColor</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="MainEditTextStyle.Dark">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/key_text_color_lxx_dark</item>
        <item name="android:textColorHint">?brandColor</item>
        <item name="backgroundTint">?brandColor</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="EditTextPreviewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textColorHint">?brandColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/grey_200</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="EditTextPreviewStyle.Dark">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/key_text_color_lxx_dark</item>
        <item name="android:textColorHint">?brandColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/grey_200</item>
        <item name="android:colorControlNormal">@color/grey_500</item>
        <item name="colorControlNormal">@color/grey_500</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_medium</item>

    </style>

    <style name="TitleTextActionKeyboard" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?brandColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TitlePage" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">?brandColor</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TitleTextNormalSecondary" parent="TextAppearance.AppCompat.Small">
