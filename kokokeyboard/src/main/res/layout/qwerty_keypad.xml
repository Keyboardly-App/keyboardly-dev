<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="TouchTargetSizeCheck,HardcodedText"
    android:background="@android:color/transparent">


    <LinearLayout
        android:id="@+id/headerKeyboard"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <com.rowland.kokokeyboard.layouts.KeyboardWrapperLayout
        android:id="@+id/keyboard_wrapper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <com.rowland.kokokeyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.rowland.kokokeyboard.keys.RectangularKeyView
                android:id="@+id/key_add_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                app:iconPadding="5dp"
                app:iconGravity="textStart"
                app:icon="@drawable/ic_round_local_activity_24"
                app:is_special_key="true"
                app:screen_width_percent="0.1"
                app:special_key_code="add_on" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7" />
        </com.rowland.kokokeyboard.layouts.KeyBoardRowLayout>

        <com.rowland.kokokeyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_qwerty_one"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_q"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Q" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_w"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="W" />


            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_e"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_r"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_t"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Y" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_u"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="U" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_i"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="I" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_o"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="O" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="P" />


        </com.rowland.kokokeyboard.layouts.KeyBoardRowLayout>

        <com.rowland.kokokeyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_qwerty_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_a"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A" />


            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_s"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="D" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_f"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_g"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="G" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_h"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="H" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_j"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="J" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_k"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="K" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="L" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />

        </com.rowland.kokokeyboard.layouts.KeyBoardRowLayout>

        <com.rowland.kokokeyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_qwerty_three"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_z"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Z" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_v"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="V"
                tools:ignore="TouchTargetSizeCheck" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B" />


            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_n"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N" />

            <com.rowland.kokokeyboard.keys.SquareKeyView
                android:id="@+id/key_m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M" />

            <com.rowland.kokokeyboard.keys.RectangularKeyView
                android:id="@+id/key_backspace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="⌫"
                app:is_special_key="true"
                app:screen_width_percent="0.3"
                app:special_key_code="backspace" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </com.rowland.kokokeyboard.layouts.KeyBoardRowLayout>

        <com.rowland.kokokeyboard.layouts.KeyBoardRowLayout
            android:id="@+id/keyboard_qwerty_four"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.rowland.kokokeyboard.keys.RectangularKeyView
                android:id="@+id/key_space"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="SPACE"
                app:is_special_key="true"
                app:screen_width_percent="0.60"
                app:special_key_code="space" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </com.rowland.kokokeyboard.layouts.KeyBoardRowLayout>
    </com.rowland.kokokeyboard.layouts.KeyboardWrapperLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>